<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报时间："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-4-18 14:13"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玻璃门破裂"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/post_treatment_item_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:text="门坏了，请师傅赶快来修理" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_image_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_icon1"
                    android:layout_width="@dimen/x95"
                    android:layout_height="@dimen/x95"
                    android:layout_margin="@dimen/x10"
                    android:background="@drawable/img_notice_item_icon"
                    android:visibility="visible" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_icon2"
                    android:layout_width="@dimen/x95"
                    android:layout_height="@dimen/x95"
                    android:layout_margin="@dimen/x10"
                    android:background="@drawable/img_notice_item_icon"
                    android:visibility="visible" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_icon3"
                    android:layout_width="@dimen/x95"
                    android:layout_height="@dimen/x95"
                    android:layout_margin="@dimen/x10"
                    android:background="@drawable/img_notice_item_icon"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_title"></include>

    <RelativeLayout
        android:id="@+id/rlayout_notice_orange"
        android:layout_width="match_parent"
        android:padding="@dimen/x15"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_notice"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/img_notice_orange"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/img_notice"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="公告"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_gonggao_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:textSize="14sp"
                android:textColor="@color/a808080"/>

            <TextView
                android:id="@+id/text_gonggao_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_notice"
                android:lines="1"
                android:textSize="15sp"
                android:textColor="@color/a808080"/>

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ae2e2e2"/>


    <RelativeLayout
        android:id="@+id/rlayout_notice_red"
        android:layout_width="match_parent"
        android:padding="@dimen/x15"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_notice_red"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/img_notice_red"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/img_notice_red"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_notice_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="通知"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_tongzhi_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:textSize="14sp"
                android:textColor="@color/a808080"/>

            <TextView
                android:id="@+id/text_tongzhi_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_notice_red"
                android:lines="1"
                android:textSize="15sp"
                android:textColor="@color/a808080"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ae2e2e2"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:background="@drawable/bind_mailbox_text_bg"
            android:gravity="center"
            android:text="原密码"
            android:textColor="@color/a343434"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bind_mailbox_edit_bg"
            android:hint="输入原密码"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:textColorHint="@color/ab3b3b3"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:background="@drawable/bind_mailbox_text_bg"
            android:gravity="center"
            android:text="新密码"
            android:textColor="@color/a343434"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bind_mailbox_edit_bg"
            android:hint="输入密码"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:textColorHint="@color/ab3b3b3"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:background="@drawable/bind_mailbox_text_bg"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="@color/a343434"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_new_pwd_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bind_mailbox_edit_bg"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textColorHint="@color/ab3b3b3"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bind_mailbox_orange_button_bg"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>
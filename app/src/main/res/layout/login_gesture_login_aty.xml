<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/ec9000"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_head"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x40"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID："
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_id_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <com.kupurui.cjhp.view.LocusPassWordView
        android:id="@+id/v_lpwd"
        android:layout_width="@dimen/x380"
        android:layout_height="@dimen/x380"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x30">

        <TextView
            android:id="@+id/text_forget_gesture_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记手势密码?  "
            android:textColor="@color/a808080"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/a808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_change_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  切换登陆方式"
            android:textColor="@color/a808080"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>
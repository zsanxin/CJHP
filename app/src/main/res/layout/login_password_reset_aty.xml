<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="40dp"
            android:background="@drawable/bind_mailbox_text_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="新密码"
            android:textColor="@color/a323232"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/bind_mailbox_edit_bg"
            android:hint="输入密码..."
            android:paddingLeft="5dp"
            android:textColorHint="@color/ab3b3b3"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="86dp"
            android:layout_height="40dp"
            android:background="@drawable/bind_mailbox_text_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="确认密码"
            android:textColor="@color/a323232"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_pwd_b"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/bind_mailbox_edit_bg"
            android:hint="再次输入密码..."
            android:paddingLeft="5dp"
            android:textColorHint="@color/ab3b3b3"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/bind_mailbox_orange_button_bg"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerly_footer"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#00ffffff"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/cube_views_load_more_default_footer_pb_more"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:indeterminateDrawable="@drawable/progressbar_loadmore"
        android:visibility="gone" />


    <TextView
        android:id="@+id/cube_views_load_more_default_footer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="#00ffffff"
        android:gravity="center"
        android:text="正在加载"
        android:textColor="#8a8a8a" />

</LinearLayout>